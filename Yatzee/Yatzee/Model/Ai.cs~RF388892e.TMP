            return false;
        }
        public bool ComputerWin()
        {
            if (TotalScore > Player.TOTALSCORE)
            {
                return true;
            }

            return false;
        }
        public void RollDice(Dice Roll)
        {

            List<int> AiRoll = Roll.Roll();
            List<int> storedDiceValues = new List<int>();
    
            int[] AiArray = new int[5];
            int maxvalue = AiArray.Max();

            for (int i = 0; i < AiRoll.Count; i++)
            {
                AiArray[i] = AiRoll[i];
            }
            System.Threading.Thread.Sleep(700);

            for (int j = 0; j < storedDiceValues.Count; j++ )
            {
                AiRoll.RemoveAt(j);
              
            }

            for (int a = 0; a < 3; a++)
            {
                System.Threading.Thread.Sleep(1000)
                Console.WriteLine("rerolling");
                Roll.CompRoll(AiRoll);
            }
           
            foreach (int result in AiRoll)
            {
                Console.WriteLine("");
                Console.WriteLine("hello{0}", result);
            }
            Rule.AddUpDice(storedDiceValues, maxvalue);
      
           

            
            
        }
    }
